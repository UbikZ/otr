{
  "apps": [
    {
      "name": "otr3",
      "script": "app.js",
      "error_file": "err.log",
      "out_file": "out.log",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "env": {
        "COMMON_VARIABLE": "true"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "www-data",
      "host": "ubikz.com",
      "ref": "origin/master",
      "repo": "https://github.com/UbikZ/otr.git",
      "path": "/var/www/otr3",
      "pre-deploy-local": "scp ./src/server/config/ontime.json www-data@ubikz.com:/var/www/otr3/current/src/server/config/ontime.json",
      "post-deploy": "npm install ; gulp pre-clean && gulp install --env=production ; pm2 startOrRestart ecosystem.json --env=production"
    }
  }
}
