{
  "apps": [
    {
      "name": "otr3",
      "script": "app.js",
      "error_file": "err.log",
      "out_file": "out.log",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "env": {
        "COMMON_VARIABLE": "true"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy": {
    "staging": {
      "user": "www-data",
      "host": "ubikz.com",
      "ref": "origin/master",
      "repo": "https://github.com/UbikZ/otr.git",
      "path": "/var/www/otr3/stage",
      "pre-deploy-local": "bash ./scripts/staging/pre-deploy-local.sh",
      "post-deploy": "bash ./scripts/staging/post-deploy.sh"
    },
    "pre-production": {
      "user": "www-data",
      "host": "ubikz.com",
      "ref": "origin/master",
      "repo": "https://github.com/UbikZ/otr.git",
      "path": "/var/www/otr3/pre-prod",
      "pre-deploy-local": "bash ./scripts/production/pre-deploy-local.sh",
      "post-deploy": "bash ./scripts/production/post-deploy.sh"
    },
    "production": {
      "user": "www-data",
      "host": "ubikz.com",
      "ref": "origin/master",
      "repo": "https://github.com/UbikZ/otr.git",
      "path": "/var/www/otr3/prod",
      "pre-deploy-local": "bash ./scripts/production/pre-deploy-local.sh",
      "post-deploy": "bash ./scripts/production/post-deploy.sh"
    }
  }
}
