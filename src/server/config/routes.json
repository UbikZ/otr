{
  "routes": [
    {
      "name": "Root access",
      "pattern": "/",
      "controllerName": "IndexController",
      "subRoutes": [
        {
          "name": "Forward index.html",
          "method": "GET",
          "pattern": "/",
          "actionName": "indexAction",
          "checkSecurity": false
        }
      ]
    },
    {
      "name": "Authentication",
      "pattern": "/authentication",
      "controllerName": "AuthenticationController",
      "subRoutes": [
        {
          "name": "Register or Login",
          "method": "POST",
          "pattern": "/sign-up",
          "actionName": "signUpAction",
          "checkSecurity": false
        },
        {
          "name": "Get logged user information",
          "method": "GET",
          "pattern": "/me",
          "actionName": "meAction",
          "checkSecurity": true
        }
      ]
    },
    {
      "name": "User",
      "pattern": "/user",
      "controllerName": "UserController",
      "subRoutes": [
        {
          "name": "Get user(s)",
          "method": "GET",
          "pattern": "/",
          "actionName": "indexAction",
          "checkSecurity": true
        },
        {
          "name": "Get ONE user",
          "method": "GET",
          "pattern": "/:id",
          "actionName": "getByIdAction",
          "checkSecurity": true
        },
        {
          "name": "Update user information",
          "method": "POST",
          "pattern": "/update/:id",
          "actionName": "updateAction",
          "checkSecurity": true
        }
      ]
    },
    {
      "name": "Organization",
      "pattern": "/organization",
      "controllerName": "OrganizationController",
      "subRoutes": [
        {
          "name": "Get organization(s)",
          "method": "GET",
          "pattern": "/",
          "actionName": "indexAction",
          "checkSecurity": true
        },
        {
          "name": "Get ONE organization",
          "method": "GET",
          "pattern": "/:id",
          "actionName": "getByIdAction",
          "checkSecurity": true
        },
        {
          "name": "Edit organization",
          "method": "POST",
          "pattern": "/edit/:id*?",
          "actionName": "editAction",
          "checkSecurity": true
        },
        {
          "name": "Delete organization",
          "method": "DELETE",
          "pattern": "/delete/:organizationId",
          "actionName": "deleteAction",
          "checkSecurity": true
        }
      ]
    },
    {
      "name": "OnTime",
      "pattern": "/on-time",
      "controllerName": "OnTimeController",
      "subRoutes": [
        {
          "name": "Get OnTime user information",
          "method": "GET",
          "pattern": "/me",
          "actionName": "meAction",
          "checkSecurity": true
        },
        {
          "name": "Get OnTime projects/release tree",
          "method": "GET",
          "pattern": "/tree",
          "actionName": "treeAction",
          "checkSecurity": true
        },
        {
          "name": "Get OnTime stories",
          "method": "GET",
          "pattern": "/items",
          "actionName": "itemsAction",
          "checkSecurity": true
        }
      ]
    },
    {
      "name": "Item",
      "pattern": "/item",
      "controllerName": "ItemController",
      "subRoutes": [
        {
          "name": "Get an item",
          "method": "GET",
          "pattern": "/",
          "actionName": "indexAction",
          "checkSecurity": true
        },
        {
          "name": "Create an item",
          "method": "POST",
          "pattern": "/create",
          "actionName": "createAction",
          "checkSecurity": true
        },
        {
          "name": "Update an item",
          "method": "POST",
          "pattern": "/update",
          "actionName": "updateAction",
          "checkSecurity": true
        },
        {
          "name": "Delete an item",
          "method": "DELETE",
          "pattern": "/delete/:organizationId/:itemId",
          "actionName": "deleteAction",
          "checkSecurity": true
        }
      ]
    },
    {
      "name": "Setting",
      "pattern": "/setting",
      "controllerName": "SettingController",
      "subRoutes": [
        {
          "name": "Get a standalone setting",
          "method": "GET",
          "pattern": "/",
          "actionName": "indexAction",
          "checkSecurity": true
        },
        {
          "name": "Update a standalone setting",
          "method": "POST",
          "pattern": "/update",
          "actionName": "updateAction",
          "checkSecurity": true
        },
        {
          "name": "Get a setting from a sub-element",
          "method": "GET",
          "pattern": "/sub/:organizationId",
          "actionName": "subIndexAction",
          "checkSecurity": true
        },
        {
          "name": "Update a setting from a sub-element",
          "method": "POST",
          "pattern": "/sub/update/:organizationId",
          "actionName": "subUpdateAction",
          "checkSecurity": true
        }
      ]
    },
    {
      "name": "PDF",
      "pattern": "/pdf",
      "controllerName": "PdfController",
      "subRoutes": [
        {
          "name": "Render/Generate a PDF",
          "method": "GET",
          "pattern": "/render",
          "actionName": "renderAction",
          "checkSecurity": true
        },
        {
          "name": "Download a PDF",
          "method": "GET",
          "pattern": "/download",
          "actionName": "downloadAction",
          "checkSecurity": true
        }
      ]
    }
  ]
}
